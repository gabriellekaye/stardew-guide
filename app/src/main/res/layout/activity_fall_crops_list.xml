<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".FallCropsListActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crop1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Amaranth"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/txt_color"
        android:background="@color/btn_color"
        android:drawableLeft="@drawable/amaranth"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crop2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Artichoke"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/txt_color"
        android:background="@color/btn_color"
        android:drawableLeft="@drawable/artichoke"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crop1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crop3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Beet"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/txt_color"
        android:background="@color/btn_color"
        android:drawableLeft="@drawable/beet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crop2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crop4"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Bok Choy"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/txt_color"
        android:background="@color/btn_color"
        android:drawableLeft="@drawable/bokchoy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crop3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crop5"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Cranberries"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/txt_color"
        android:background="@color/btn_color"
        android:drawableLeft="@drawable/cranberries"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crop4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crop6"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Eggplant"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/txt_color"
        android:background="@color/btn_color"
        android:drawableLeft="@drawable/eggplant"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crop5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crop7"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Fairy Rose"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/txt_color"
        android:background="@color/btn_color"
        android:drawableLeft="@drawable/fairyrose"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crop6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crop8"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Grape"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/txt_color"
        android:background="@color/btn_color"
        android:drawableLeft="@drawable/grapes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crop7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crop9"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Pumpkin"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/txt_color"
        android:background="@color/btn_color"
        android:drawableLeft="@drawable/pumpkin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crop8" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crop10"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Yam"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/txt_color"
        android:background="@color/btn_color"
        android:drawableLeft="@drawable/yam"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crop9" />

</androidx.constraintlayout.widget.ConstraintLayout>