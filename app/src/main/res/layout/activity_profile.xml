<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:text="Profile"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/txt_color"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/user"
        android:background="@color/btn_color"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_profile"
        />

    <TextView
        android:id="@+id/tv_player_name"
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_profile"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textStyle="bold|italic"
        android:textColor="@color/txt_color"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_farm_name"
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_player_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textStyle="italic"
        android:textColor="@color/txt_color"
        android:textSize="25dp" />

    <TableLayout
        android:id="@+id/tl_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:background="@color/btn_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_icon">
        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Current Season: "
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight="6"/>
            <TextView
                android:id="@+id/tv_currseason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textSize="25dp"
                android:textStyle="italic"
                android:layout_weight="3"
                />
        </TableRow>
        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Gender: "
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textSize="25dp"
                android:textStyle="italic"
                android:layout_weight="2"
                />
        </TableRow>
        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Farm Type: "
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight="4"/>
            <TextView
                android:id="@+id/tv_farmtype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textSize="25dp"
                android:textStyle="italic"
                android:layout_weight="5"
                />
        </TableRow>
    </TableLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_editAccount"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_logout"
        android:text="Edit Account Details"
        android:textStyle="bold"
        android:paddingHorizontal="10dp"
        android:textColor="@color/txt_color"
        android:textSize="23dp"
        android:background="@color/btn_color" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Logout"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/txt_color"
        android:textSize="23dp"
        android:background="@color/btn_color" />

</androidx.constraintlayout.widget.ConstraintLayout>