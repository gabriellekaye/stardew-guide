<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".SpringForageListActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/f1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Common Mushroom"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/commonmushroom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/f2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Daffodil"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/daffodil"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/f1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/f3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Dandelion"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/dandelion"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/f2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/f4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Leek"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/leek"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/f3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/f5"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Morel"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/morel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/f4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/f6"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Salmonberry"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/salmonberry"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/f5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/f7"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Spring Onion"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/springonion"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/f6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/f8"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Wild Horseradish"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/wildhorseradish"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/f7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>