<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/background_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="50dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:src="@drawable/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toTopOf="parent"
            />

        <TextView
            android:id="@+id/bookmark_txt"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:text="Book Marks"
            android:textStyle="bold"
            android:textColor="@color/txt_color"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/profile_txt"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bookmark_txt"
            android:text="Profile"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="@color/txt_color"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profile_btn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_txt"
            android:text="User"
            android:layout_margin="10dp"
            android:textColor="@color/txt_color"
            android:textSize="25sp"
            android:background="@color/btn_color" />

        <TextView
            android:id="@+id/tutorials_txt"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_btn"
            android:text="Tutorials"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="@color/txt_color"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/forage_tutorial_btn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tutorials_txt"
            android:text="Foraging"
            android:layout_margin="10dp"
            android:textColor="@color/txt_color"
            android:textSize="25sp"
            android:background="@color/btn_color" />

        <TextView
            android:id="@+id/seasonal"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forage_tutorial_btn"
            android:text="Lists"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="@color/txt_color"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crops"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seasonal"
            android:text="Crops"
            android:layout_margin="10dp"
            android:textColor="@color/txt_color"
            android:textSize="25sp"
            android:background="@color/btn_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/forage"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crops"
            android:text="Forageables"
            android:layout_margin="10dp"
            android:textColor="@color/txt_color"
            android:textSize="25sp"
            android:background="@color/btn_color" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>