<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CropsListActivity"
    android:background="@color/background_color" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crops_spring"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/spring"
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:textColor="@color/txt_color"
        android:background="@color/btn_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crops_summer"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/summer"
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:textColor="@color/txt_color"
        android:background="@color/btn_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crops_spring" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crops_fall"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/fall"
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:textColor="@color/txt_color"
        android:background="@color/btn_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crops_summer" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crops_winter"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/winter"
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:textColor="@color/txt_color"
        android:background="@color/btn_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crops_fall" />

</androidx.constraintlayout.widget.ConstraintLayout>