<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".SummerCropsListActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crop1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Blueberry"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/blueberry"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crop2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Corn"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/corn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crop1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crop3"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Hops"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/hops"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crop2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crop4"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Hot Pepper"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/hotpepper"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crop3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crop5"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Melon"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/melon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crop4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crop6"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Poppy"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/poppy"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crop5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crop7"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Radish"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/radish"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crop6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crop8"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Red Cabbage"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/redcabbage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crop7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crop9"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Starfruit"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/starfruit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crop8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crop10"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Summer Spangle"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableLeft="@drawable/summersprangle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crop9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crop11"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Sunflower"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/sunflower"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crop10" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crop12"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Tomato"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:background="@color/btn_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/tomato"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crop11" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crop13"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Wheat"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/btn_color"
            android:drawableLeft="@drawable/wheat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crop12" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>